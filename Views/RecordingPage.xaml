<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="reserve_flow_ai_2026.RecordingPage"
    Title="Record">

    <VerticalStackLayout Padding="16"
            Spacing="12">
        <Label Text="Recording"
                FontSize="20"/>

        <!-- Waveform placeholder -->
        <Frame HeightRequest="120"
                BackgroundColor="#EEE"
                CornerRadius="8">
            <Label Text="Waveform placeholder"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
        </Frame>

        <HorizontalStackLayout Spacing="12"
                HorizontalOptions="Center">
            <Button Text="Start"
                    x:Name="StartBtn"/>
            <Button Text="Stop"
                    x:Name="StopBtn"/>
            <Button Text="Play"
                    x:Name="PlayBtn"/>
        </HorizontalStackLayout>

        <Label Text="Transcription"
                FontAttributes="Bold"/>
        <Editor x:Name="TranscriptionEditor"
                HeightRequest="120"/>

        <Button Text="Save"
                x:Name="SaveBtn"/>
    </VerticalStackLayout>

</ContentPage>
